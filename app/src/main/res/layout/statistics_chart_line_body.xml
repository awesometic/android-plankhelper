<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/statistics_chart_line_cardview_body"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/statistics_chart_line_textview_datetime"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/statistics_chart_line_textview_duration"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/statistics_chart_line_textview_datetime" />

            <TextView
                android:id="@+id/statistics_chart_line_textview_lap_count"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/statistics_chart_line_textview_duration" />

            <TextView
                android:id="@+id/statistics_chart_line_textview_method"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/statistics_chart_line_textview_lap_count" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>