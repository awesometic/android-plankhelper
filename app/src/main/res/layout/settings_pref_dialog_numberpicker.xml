<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="18dp"
    android:paddingTop="18dp"
    android:theme="@style/AppAlertDialogContent">

    <NumberPicker
        android:id="@+id/settings_pref_dialog_widget_numberPicker_hour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
    <NumberPicker
        android:id="@+id/settings_pref_dialog_widget_numberPicker_min"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
    <NumberPicker
        android:id="@+id/settings_pref_dialog_widget_numberPicker_sec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
</LinearLayout>