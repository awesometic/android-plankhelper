<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="21">true</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Toolbar Theme / Apply white arrow -->
        <item name="colorControlNormal">@android:color/white</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item>

        <!-- Material Theme -->
        <item name="colorPrimary">@color/colorPrimaryUser</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkUser</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:navigationBarColor" tools:targetApi="21">@color/navigationBarColor</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="21">true</item>

        <!-- Preference Theme -->
        <item name="preferenceTheme">@style/PreferenceLocalTheme</item>

        <!-- Theme for all Alert Dialogs (e.g. from DialogPreference) -->
        <item name="alertDialogTheme">@style/AppAlertDialog</item>
    </style>

    <style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- White arrow -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/drawerArrowColor</item>
    </style>

    <style name="CardViewTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/plankCardViewPrimaryColor</item>
    </style>

    <style name="DrawerTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/NavigationDrawerPrimaryColor</item>
    </style>

    <!-- Preference Theme -->
    <style name="AppTheme.ActionBarTheme.Settings" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- White arrow -->
        <item name="colorControlNormal">@android:color/white</item>

        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="PreferenceLocalTheme" parent="PreferenceThemeOverlay">
        <item name="android:textColorPrimary">@color/pref_primary_text_color_selector</item>
        <item name="android:textColorSecondary">@color/pref_secondary_text_color_selector</item>
        <item name="android:textColorTertiary">@color/colorAccent</item>
    </style>

    <!-- Style for a DialogPreference Entry -->
    <style name="AppTheme.DialogPreference">
        <item name="positiveButtonText">@android:string/ok</item>
        <item name="negativeButtonText">@android:string/cancel</item>
    </style>

    <!-- Theme for all Alert Dialogs (e.g. from DialogPreference) -->
    <style name="AppAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!-- To tint the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppAlertDialogContent" parent="Theme.AppCompat.Light">
        <!-- To tint the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- CheckBox style -->
    <style name="CheckBoxStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimaryUser</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>
</resources>